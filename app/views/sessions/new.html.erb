<h1>Login</h1>
<%= form_with(scope: :session, url: login_path) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: "Enter your email-id" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>

