<h1>List of users</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>username</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'View profile', user %></td>
        <% if logged_in? && user == current_user %>
          <td><%= link_to 'Edit profile', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

